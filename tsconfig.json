{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "paths": {
      "@test_multiple_packages/foo": ["foo_package"],
      "@test_multiple_packages/bar": ["bar_package"],
      "@test_multiple_packages/baz": ["baz_package"]
    }
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
